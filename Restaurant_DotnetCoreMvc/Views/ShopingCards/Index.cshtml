@{
}

<table class="table">
      <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Actions</th>

  </tr>
@foreach (var item in @Model)
{
  <tr>
        <td>@item.Pie.Name</td>
        <td>@item.Pie.Price</td>
        <td>@item.Pie.Description</td>
        <td>@item.Amount</td>
        <td><a asp-controller="ShopingCards" asp-action="Delete" asp-route-Id="@item.ShopingCardItemId" >Remove from shoping cards</a></td>

  </tr>
}   
</table>